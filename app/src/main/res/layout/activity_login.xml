<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.andexert.library.RippleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_logo_login" />
            </com.andexert.library.RippleView>
        </RelativeLayout>


        <com.rey.material.widget.EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디(이메일)"
            android:inputType="textEmailAddress"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color_hint"
            app:et_dividerColor="@color/main_color"
            app:et_dividerHeight="1dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="@color/main_color_hint"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="#ff0000" />

        <com.rey.material.widget.EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/main_color"
            android:textColorHint="@color/main_color_hint"
            app:et_dividerColor="@color/main_color"
            app:et_dividerHeight="1dp"
            app:et_labelEnable="true"
            app:et_labelTextColor="@color/main_color_hint"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="#ff0000" />

        <com.andexert.library.RippleView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:rv_rippleDuration="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xml_rounded_main_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="로그인"
                android:textColor="#fff"
                android:textSize="16sp" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:rv_color="#212F3B"
            app:rv_rippleDuration="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xml_rounded_transparent_bg_main_border"
                android:gravity="center"
                android:padding="10dp"
                android:text="회원가입"
                android:textColor="@color/main_color"
                android:textSize="16sp" />
        </com.andexert.library.RippleView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <com.andexert.library.RippleView
                android:id="@+id/tv_find_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:rv_color="#212F3B"
                app:rv_rippleDuration="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="아이디 찾기 >"
                    android:textColor="@color/main_color"
                    android:textSize="16sp" />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/tv_find_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:rv_color="#212F3B"
                app:rv_rippleDuration="100">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="비밀번호 찾기 >"
                    android:textColor="@color/main_color"
                    android:textSize="16sp" />
            </com.andexert.library.RippleView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
